# Database URL (PostgreSQL) - Provided by Railway
DATABASE_URL="postgresql://user:password@localhost:5432/portland_reuse_hub"

# JWT Secret - Generate a secure random string for production
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-key-change-this-in-production"

# Admin password hash - Generate with bcrypt
# Run: node -e "console.log(require('bcryptjs').hashSync('your-password', 10))"
ADMIN_PASSWORD_HASH="$2a$10$your-bcrypt-hash-here"

# Environment
NODE_ENV="development"

# Server port
PORT=3000

# Frontend URL (for CORS in production)
FRONTEND_URL="https://your-frontend-domain.com"
